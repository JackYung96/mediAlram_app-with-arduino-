<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/arduino_send"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/ardn"
    tools:context="com.example.jaegyengjo.medino.arduinoSend">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>

    <Button
        android:id="@+id/send"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="설정"
        android:layout_marginEnd="54dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/entry"
        android:layout_alignParentEnd="true"
        android:background="@drawable/buttonshape"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:height="25dp"
        android:text=""
        android:id="@+id/recv"
        android:layout_below="@+id/label"
        android:layout_alignStart="@+id/entry"
        android:layout_marginTop="92dp" />

    <TextView
        android:id="@+id/label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/send"
        android:layout_marginTop="108dp" />

    <EditText
        android:id="@+id/entry"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_below="@+id/label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/home"
        android:text="홈으로"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/send"
        android:background="@drawable/buttonshape"/>


</RelativeLayout>
